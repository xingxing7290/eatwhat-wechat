.page {
  padding: 64rpx 32rpx;
  min-height: 100vh;
  background: #f6f6f6;
}

.card {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  color: #111827;
}

.input {
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  background: #f3f4f6;
}

.btn {
  height: 88rpx;
  border-radius: 12rpx;
  background: #111827;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}
