.page {
  padding: 24rpx;
  background: #f6f6f6;
}

.card {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.label {
  color: #6b7280;
}

.value {
  color: #111827;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: #e5e7eb;
}

.placeholder {
  background: #d1d5db;
}

.btn {
  margin-top: 32rpx;
  height: 88rpx;
  border-radius: 12rpx;
  background: #ef4444;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.secondary {
  margin-top: 24rpx;
  background: #f3f4f6;
  color: #111827;
}
