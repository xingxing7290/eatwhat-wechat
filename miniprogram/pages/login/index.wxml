<view class="page">
  <view class="card">
    <view class="title">登录</view>

    <input class="input" placeholder="用户名" value="{{username}}" bindinput="onInputUsername" />
    <input class="input" placeholder="密码" password value="{{password}}" bindinput="onInputPassword" />

    <button class="btn" loading="{{loading}}" bindtap="onSubmit">登录</button>
    <button class="link" bindtap="goRegister">没有账号？去注册</button>
  </view>
</view>
