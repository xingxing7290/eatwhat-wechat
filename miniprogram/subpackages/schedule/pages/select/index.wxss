.page {
  padding: 24rpx;
  padding-bottom: 160rpx;
  background: #f6f6f6;
}

.topActions {
  display: flex;
  gap: 12rpx;
}

.topBtn {
  flex: 1;
  height: 72rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  color: #111827;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.topCard {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.08);
  margin-bottom: 16rpx;
}

.header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.date {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.type {
  font-size: 26rpx;
  color: #6b7280;
}

.search {
  height: 80rpx;
  border: none;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #f3f4f6;
  margin-top: 12rpx;
}

.list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(17, 24, 39, 0.06);
}

.empty {
  padding: 24rpx 16rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 18rpx 16rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.item:last-child {
  border-bottom: none;
}

.left {
  width: 72rpx;
  display: flex;
  align-items: center;
}

.main {
  flex: 1;
}

.name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
}

.meta {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 24rpx;
  background: rgba(246, 246, 246, 0.98);
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -12rpx 28rpx rgba(17, 24, 39, 0.08);
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  background: #111827;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.ghost {
  background: #f3f4f6;
  color: #111827;
  border: none;
}
