.page {
  padding: 24rpx;
  background: #f6f6f6;
}

.loading {
  color: #666;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.08);
}

.cover {
  width: 100%;
  height: 360rpx;
  background: #e5e7eb;
}

.placeholder {
  background: #d1d5db;
}

.name {
  padding: 24rpx 24rpx 0;
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
}

.meta {
  padding: 8rpx 24rpx 0;
  font-size: 24rpx;
  color: #6b7280;
}

.desc {
  padding: 16rpx 24rpx 0;
  font-size: 26rpx;
  color: #111827;
}

.section {
  padding: 18rpx 24rpx 0;
}

.st {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.sv {
  font-size: 26rpx;
  color: #111827;
}

.actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  background: #111827;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.ghost {
  background: #f3f4f6;
  color: #111827;
  border: none;
}

.danger {
  background: #ef4444;
}

.empty {
  color: #6b7280;
  padding: 24rpx;
  text-align: center;
}
