.page {
  padding: 24rpx;
  background: #f6f6f6;
}

.card {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.column {
  flex-direction: column;
  align-items: stretch;
}

.label {
  color: #6b7280;
  margin-bottom: 16rpx;
}

.right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: #e5e7eb;
}

.placeholder {
  background: #d1d5db;
}

.action {
  color: #2563eb;
  font-weight: 600;
}

.input {
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  background: #f3f4f6;
}

.btn {
  height: 88rpx;
  border-radius: 12rpx;
  background: #111827;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}
